<p id="notice"><%= notice %></p>

<h1>Listing Weekends</h1>

<div class="center">
  <div class="row">
  <% @weekends.each do |weekend| %>
      <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(weekend.weekendhangout.thumb.url), weekend %>
          <div class="caption">
            <h3><%= link_to weekend.name.capitalize, weekend %></h3>
            <p>Description: </p>
            <p>Location: <%= weekend.address.capitalize %></p>
        	  <div class="star-rating" data-score= <%= @avg_rating %> ></div>
	 </div>
        </div>
      </div>
    <% end %>
  </div>
</div

<% if user_signed_in? && current_user.admin? %>

<table>
  <thead>
    <tr>
      <th>Hangouts</th>
      <th>Name</th>
      <th>Address</th>
      <th>Description</th>
      <th>Placesvisited</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weekends.each do |weekend| %>
      <tr>
        <td><%= weekend.Hangouts %></td>
        <td><%= weekend.name %></td>
        <td><%= weekend.address %></td>
        <td><%= weekend.description %></td>
        <td><%= weekend.placesvisited %></td>
        <td><%= link_to 'Show', weekend %></td>
        <td><%= link_to 'Edit', edit_weekend_path(weekend) %></td>
        <td><%= link_to 'Destroy', weekend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>
<% if user_signed_in? %>
<%= link_to 'New Weekend', new_weekend_path %>
<% end %>
