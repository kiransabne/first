<div class="center">
  <div class="row">
  <% @pubs.each do |pub| %>
      <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(pub.pubhome.thumb.url), pub %>
          <div class="caption">
            <h3><%= link_to pub.name.capitalize, pub %></h3>
            <p>Description: </p>
            <p>Location: <%= pub.address.capitalize %></p>
		</div>
        </div>
      </div>
    <% end %>
  </div>
</div
