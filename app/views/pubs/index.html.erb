<p id="notice"><%= notice %></p>

<h1>Listing Pubs</h1>
<div class="center">
  <div class="row">
  <% @pubs.each do |pub| %>
      <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(pub.pubhome.thumb.url), pub %>
          <div class="caption">
            <h3><%= link_to pub.name.capitalize, pub %></h3>
            <p>Description: </p>
            <p>Location: <%= pub.address.capitalize %></p>
        	  <div class="star-rating" data-score= <%= @avg_rating %> ></div>
	 </div>
        </div>
      </div>
    <% end %>
  </div>
</div

<% if user_signed_in? && current_user.admin? %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Zipcode</th>
      <th>Phone</th>
      <th>Timing</th>
      <th>Takesreservation</th>
      <th>Parking</th>
      <th>Goodforgroups</th>
      <th>Ambience</th>
      <th>Noiselevel</th>
      <th>Goodfordancing</th>
      <th>Alcoho</th>
      <th>Happyhour</th>
      <th>Smoking</th>
      <th>Hastv</th>
      <th>Bar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pubs.each do |pub| %>
      <tr>
        <td><%= pub.name %></td>
        <td><%= pub.address %></td>
        <td><%= pub.zipcode %></td>
        <td><%= pub.phone %></td>
        <td><%= pub.timing %></td>
        <td><%= pub.takesreservation %></td>
        <td><%= pub.parking %></td>
        <td><%= pub.goodforgroups %></td>
        <td><%= pub.ambience %></td>
        <td><%= pub.noiselevel %></td>
        <td><%= pub.goodfordancing %></td>
        <td><%= pub.alcoho %></td>
        <td><%= pub.happyhour %></td>
        <td><%= pub.smoking %></td>
        <td><%= pub.hastv %></td>
        <td><%= pub.bar %></td>
        <td><%= link_to 'Show', pub %></td>
        <td><%= link_to 'Edit', edit_pub_path(pub) %></td>
        <td><%= link_to 'Destroy', pub, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>
<% if user_signed_in? %>
<%= link_to 'New Pub', new_pub_path %>
<% end %>

