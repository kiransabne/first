<p id="notice"><%= notice %></p>

<h1>Listing Bars</h1>

<div class="center">
  <div class="row">
  <% @bars.each do |bar| %>
      <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(bar.bar.thumb.url), bar %>
          <div class="caption">
            <h3><%= link_to bar.name.capitalize, bar %></h3>
            <p>Description: </p>
            <p>Location: <%= bar.address.capitalize %></p>
        	  <div class="star-rating" data-score= <%= @avg_rating %> ></div>
	 </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% if user_signed_in? && current_user.admin? %>


<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Zipcode</th>
      <th>Phone</th>
      <th>Timing</th>
      <th>Takesreservation</th>
      <th>Parking</th>
      <th>Goodforgroups</th>
      <th>Ambience</th>
      <th>Noiselevel</th>
      <th>Goodfordancing</th>
      <th>Alcohol</th>
      <th>Happyhour</th>
      <th>Smoking</th>
      <th>Hastv</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bars.each do |bar| %>
      <tr>
        <td><%= link_to bar.name %></td>
        <td><%= bar.address %></td>
        <td><%= bar.zipcode %></td>
        <td><%= bar.phone %></td>
        <td><%= bar.timing %></td>
        <td><%= bar.takesreservation %></td>
        <td><%= bar.parking %></td>
        <td><%= bar.goodforgroups %></td>
        <td><%= bar.ambience %></td>
        <td><%= bar.noiselevel %></td>
        <td><%= bar.goodfordancing %></td>
        <td><%= bar.alcohol %></td>
        <td><%= bar.happyhour %></td>
        <td><%= bar.smoking %></td>
        <td><%= bar.hastv %></td>
        
        <td><%= link_to 'Edit', edit_bar_path(bar) %></td>
        <td><%= link_to 'Destroy', bar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>
<% if user_signed_in? %>
<%= link_to 'Can\'t find the Bar you visited? You can add it here New Bar', new_bar_path, class: "btn btn-link" %>
<% end %>


