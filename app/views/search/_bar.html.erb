  <div class="row">
  <% @bars.each do |bar| %>
      <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(bar.bar.url), bar %>
          <div class="caption">
            <h3><%= link_to bar.name.capitalize, bar %></h3>
           <p>Location:<%= bar.address %></p>
            </div>
        </div>
      </div>
    <% end %>
  </div>
