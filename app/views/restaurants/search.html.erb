<div class="center">
  <div class="row">
  <% @restaurants.each do |restaurant| %>
      <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(restaurant.image.url), restaurant %>
          <div class="caption">
            <h3><%= link_to restaurant.name.capitalize, restaurant %></h3>
            <p><%= restaurant.description.capitalize %></p>
            <p><%= restaurant.city.capitalize %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


