<style>
  table {
    border-collapse: collapse;
  }
  
  tr {
    border-bottom: 1px solid #e3e3e3;
  }
</style>

<link href='https://fonts.googleapis.com/css?family=Indie+Flower' rel='stylesheet' type='text/css'>
<div class="container-fluid">
  <div class="row">
      <div class="col-md-8">
      <%= image_tag @place.placesvisited_url %>   
      <br>
      <br>
       <% if @reviews.blank? %>
      <h3> No reviews Yet for this Place. If you have been there then, Be the first to give a reviews and help others</h3>
    <% else %>
      <h2> Reviews.</h2>
      <table class="table">
        <thead>
          <tr>

            <th class="col-md-3"></th>
            <th class="col-md-9"></th>
          </tr>
        </thead>

        <tbody class="frm-white">
          <% @reviews.each do |review| %>
              <tr>
                <td>
                    <div class="img-rounded">
                      <img src="<%= review.user.avatar_url %>">
                    </div> 

                  
                    <p><%= review.created_at.strftime("%-d/%-m/%-y") %></p>
                </td>

                <td>
                    <h4><strong>
                        <%= "#{review.user.first_name.capitalize} #{review.user.last_name.capitalize[0]}." %>
                    </strong>
                    </h4>
                      <div class="star-rating" data-score= <%= review.rating %> ></div>
                      <h5><p><%= h(review.comment).gsub(/\n/, '<br/>').html_safe %></p></h5>
								<%= social_share_button_tag(@place.reviews) %>

                      <% if user_signed_in? %>
                        <% if (review.user == current_user) || (current_user.admin?) %>
                          <%= link_to "Edit", edit_place_review_path(@place, review) %>
                          <%= link_to "Delete", place_review_path(@place, review), method: :delete %>
                          <% end %>
                        <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
    <% end %>
    </div>
    <br>
    <br>
	<div class="col-md-4">

		<div class="frm-white"> 
		<div class="detail-overview-hearts">
                <h4><i class="glyphicon glyphicon-heart"></i> <strong><%= @place.get_upvotes.size %></strong> people love it
            </h4></div>
		  <%= link_to "Give Heart", like_place_path(@place), class: "btn btn-success", method: :put %>

			  <%= link_to "Downvote", dislike_place_path(@place), 
				class: "btn btn-link", method: :put %>
		</div>
      
      <h2><strong>
          <%= @place.name.capitalize %>
      </strong></h2><%= social_share_button_tag(@place.name) %>

		    
    <div class="star-rating" data-score= <%= @avg_rating %> ></div>
    <p><%= "#{@reviews.length} reviews" %></p>

	<div class="frm-white">
    <p>
      <strong>Address:</strong>
      <%= @place.address.capitalize %>
    </p>
	
	<p><strong>Description:</strong>
		<%= @place.description %>
	</p>
	</div>

    <%= link_to "Write a Review", new_place_review_path(@place), class: "btn btn-success" %>

    <br>
    <br>

    <iframe
    width="296"
    height="230"
    frameborder="1" style="border:1"
    src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDJ7BphNq_tVYF9JucYg93sM_xkeuMwR0w
      &q=<%= @place.address.parameterize %>&zoom=14" allowfullscreen>
  </iframe>

  <br>
  <br>
</div>
</div>
</div>
<%= link_to 'Edit Details', edit_place_path(@place), class: "btn btn-link" %> |
<%= link_to 'Back', places_path, class: "btn btn-link" %>


<script>
  $('.star-rating').raty({
    path: 'http://reviewapp.blob.core.windows.net/stars', 
    readOnly: true,
    score: function() {
      return $(this).attr('data-score')
    }
  });
</script>
