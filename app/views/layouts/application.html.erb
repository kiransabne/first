<!DOCTYPE html>
<html>
<head>
  <title>ReviewApp</title>
    <%= render 'layouts/bootstrap' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'jquery.raty.js', "data-turbolinks-track" => false %>
  <%= csrf_meta_tags %>
</head>
<body>
	<%= render 'layouts/navbar' %>
	<ul class="nav nav-tabs">
  	  <li><%= link_to "Home", root_path %></li>
  	  <li><%= link_to "Restaurants", restaurants_path %></li>
  	  <li><%= link_to "Bars", bars_path %></li>
  	  <li><%= link_to "Street Foods", street_foods_path %></li>
  	  <li><%= link_to "Places", places_path %>
	</ul>

		<div class="container-fluid">
		<div class="bs-component">
			<% flash.each do |name, msg| %>
				<% if msg.is_a?(String) %>
					<div class="alert alert-<%= name == "notice" ? "success" : "danger" %> alert-dismissable">
					<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
					<%= content_tag :div, msg, :id => "flash_#{name}" %>
					</div>
			<% end %>
		</div>
	<% end %>
		<%= yield %>
		<%= render 'layouts/footer' %>
	</div>
</body>
</html>
